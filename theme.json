{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "background",
					"color": "#ffffff",
					"name": "Background"
				},
				{
					"slug": "foreground",
					"color": "#1a1a1a",
					"name": "Foreground"
				},
				{
					"slug": "primary",
					"color": "#005566",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#767676",
					"name": "Secondary"
				}
			],
			"duotone": [],
			"gradients": []
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
					"slug": "system-font",
					"name": "System Font"
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"name": "Small",
					"size": "1rem"
				},
				{
					"slug": "normal",
					"name": "Normal",
					"size": "1.125rem"
				},
				{
					"slug": "large",
					"name": "Large",
					"size": "1.5rem"
				},
				{
					"slug": "huge",
					"name": "Huge",
					"size": "2rem"
				}
			]
		},
		"spacing": {
			"spacingScale": {
				"operator": "*",
				"increment": 1.5,
				"steps": 7,
				"mediumStep": 1.5,
				"unit": "rem"
			},
			"spacingSizes": [
				{
					"slug": "20",
					"size": "clamp(0.5rem, 1vw, 0.75rem)",
					"name": "20"
				},
				{
					"slug": "30",
					"size": "clamp(0.75rem, 1.5vw, 1rem)",
					"name": "30"
				},
				{
					"slug": "40",
					"size": "clamp(1rem, 2vw, 1.5rem)",
					"name": "40"
				},
				{
					"slug": "50",
					"size": "clamp(1.5rem, 3vw, 2rem)",
					"name": "50"
				},
				{
					"slug": "60",
					"size": "clamp(2rem, 4vw, 3rem)",
					"name": "60"
				},
				{
					"slug": "70",
					"size": "clamp(3rem, 5vw, 4rem)",
					"name": "70"
				},
				{
					"slug": "80",
					"size": "clamp(4rem, 6vw, 5rem)",
					"name": "80"
				}
			]
		},
		"layout": {
			"contentSize": "800px",
			"wideSize": "1200px"
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)",
			"fontSize": "var(--wp--preset--font-size--normal)",
			"lineHeight": "1.6"
		},
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--foreground)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--secondary)"
					},
					"typography": {
						"textDecoration": "underline"
					}
				},
				":focus": {
					"outline": "2px solid var(--wp--preset--color--primary)",
					"outlineOffset": "2px"
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--background)"
				},
				"border": {
					"radius": "4px"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)"
					}
				},
				":focus": {
					"outline": "2px solid var(--wp--preset--color--foreground)",
					"outlineOffset": "2px"
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "600",
					"lineHeight": "1.3"
				}
			}
		}
	}
}
